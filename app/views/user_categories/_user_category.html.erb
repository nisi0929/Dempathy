<div id="<%= dom_id user_category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= user_category.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= user_category.category_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this user category", user_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this user category', edit_user_category_path(user_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
