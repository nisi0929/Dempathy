<div>
  <h1 class="font-bold text-4xl">AdminPost#new</h1>
  <p>Find me in app/views/admin_post/new.html.erb</p>
</div>
<%= form_with model:@post,url:admin_posts_path, local: true do |f| %>
<div class=" grid grid-cols-1 text-center mx-40">
  <%= f.text_field :title, placeholder: "title", class: "search-input mt-10"%>
  <%= f.text_area :content, placeholder: "content", class: "search-input my-10"%>
  <%= f.submit "admin-post", class: "search-btn" %>
</div>
<% end %>