<h1>パスワード編集</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "users/shared/error_messages", resource: resource %>

<div class="field">
  <p>サークル名</p>
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
</div>
<div class="field">
  <p>説明</p>
  <%= f.text_area :description, autofocus: true, autocomplete: "description" %>
</div>

<div class="field">
  <p>画像</p>
  <%= f.text_field :image, autofocus: true, autocomplete: "image" %>
</div>

<div class="field py-5">
  <p>メールアドレス</p>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="field py-5">
  <p>新しいパスワード（もし変えたくなければ空白のままで）</p>
  <%= f.password_field :password, autocomplete: "new-password" %>
  <% if @minimum_password_length %>
  <br />
  <%= @minimum_password_length %>文字以上でお願いします</em>
  <% end %>
</div>

<div class="field py-5">
  <p>新しいパスワードの確認</p>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="field py-5">
  <p>現在のパスワード</p>
  <%= f.password_field :current_password, autocomplete: "current-password" %>
</div>

<div class="actions">
  <%= f.submit "編集完了"%>
</div>
<% end %>
<%= button_to "アカウントの削除", registration_path(resource_name), class:"my-10", data: { confirm: "本当によろしいですか" }, method: :delete %>
<%= link_to "戻る", :back %>