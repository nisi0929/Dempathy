<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "users/shared/error_messages", resource: resource, status: :unprocessable_entity %>

<div class="field">
  <p>サークル名</p>
  <%= f.text_field :name, autofocus: true %>
</div>
<div class="field">
  <p>説明</p>
  <%= f.text_area :description, autofocus: true %>
</div>

<div class="field">
  <p>画像</p>
  <%= f.file_field :image, autofocus: true %>
</div>

<div class="field">
  <p>メールアドレス</p>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
  <p>パスワード</p>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>

<div class="field">
  <p>パスワードの確認</p>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="actions pt-10">
  <%= f.submit "新規登録", class: "cursor-pointer" %>
</div>
<% end %>

<%= render "users/shared/links" %>