<p class=" text-2xl my-20">管理画面</p>
<div class="grid grid-cols-2">

    <div class="mx-10">
        <p class="border-dashed border-gray-700 p-5 border-2">ユーザー一覧</p>
        <div class="grid grid-cols-2 gap-3">
            <% @suitable_user.each do |user| %>
            <div class=" py-5 px-2 shadow-md">
                <p>メールアドレス：<%= user.email %></p>
                <p><%= user.description %></p>
                <%= link_to "編集", edit_user_registration_path(user)%>
                <%= button_to "削除", destroy_by_admin_user_path(user), method: :delete %>
                <%= button_to "表示変更", change_suitable_user_path(user), method: :patch %>
            </div>
            <% end%>
        </div>
    </div>

    <div class="mx-10">
        <p class="border-dashed border-gray-700 p-5 border-2">不適切なユーザー</p>
        <div class="grid grid-cols-2 gap-3">
            <% @unsuitable_user.each do |user| %>
            <div class="py-5 px-2 shadow-md">
                <p>メールアドレス：<%= user.email %></p>
                <p><%= user.description %></p>
                <%= link_to "編集", edit_user_registration_path(user)%>
                <%= button_to "削除", destroy_by_admin_user_path(user), method: :delete %>
                <%= button_to "表示変更", change_suitable_user_path(user), method: :patch %>
            </div>
            <% end%>
        </div>
    </div>

</div>