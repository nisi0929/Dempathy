<div class="mx-40">
  <h1 class="font-bold text-4xl">Categories#new</h1>
  <p>Find me in app/views/categories/new.html.erb</p>

  <%= form_with(model: @category, url:categories_path ,class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :color %>
    <%= form.color_field :color, class: "block shadow rounded-md border border-gray-200  w-full" %>
  </div>

  <div class="inline">
    <%= form.submit "add-category", class: "rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium cursor-pointer" %>
  </div>
  <% end %>
</div>