<div>
  <h1 class="font-bold text-4xl">Categories#index</h1>
  <div>
    <% @categories.each do |c| %>
    <div class="py-5 px-2 mx-40 shadow-md">
      <p><%=c.name%></p>
      <div class=" w-full h-10 my-10 " style='background-color:<%= c.color%>'></div>
      <%= link_to "edit",edit_category_path(c.id) %>
      <%= button_to "削除",category_path(c.id),method: :delete%>
    </div>
    <% end %>
  </div>
</div>