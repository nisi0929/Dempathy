<div class="text-center">
    <% if notice %>
    <div class=" bg-lime-400 mx-24 my-10 py-5 shadow-2xl rounded-md">
        <p class="alert alert-notice"><%= notice %></p>
    </div>

    <% end %>
    <% if alert %>
    <div class=" bg-orange-400 mx-24 my-10 py-5 shadow-2xl rounded-md">
        <p class="alert alert-error"><%= alert %></p>
    </div>
    <% end %>
</div>

<div class="text-center">
    <% if flash[:success] %>
    <div class=" bg-lime-400 mx-24 my-10 py-5 shadow-2xl rounded-md">
        <p class="alert alert-notice"><%= flash[:success] %></p>
    </div>

    <% end %>
    <% if flash[:alert] %>
    <div class=" bg-orange-400 mx-24 my-10 py-5 shadow-2xl rounded-md">
        <p class="alert alert-error"><%= flash[:alert] %></p>
    </div>
    <% end %>
</div>